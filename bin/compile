#!/bin/sh

build_dir=$1

indent() {
  sed -u 's/^/       /'
}

cd "$build_dir"

echo "-----> Found artisan"

php artisan webpal:extract-vue-components
php artisan webpal:compile
php artisan view:cache

sed -i 's=\\/tmp\\/build[^/]*/storage=storage=g' storage/webpal/generated/views.en.json
sed -i 's=\\/tmp\\/build[^/]*/storage=storage=g' storage/webpal/generated/views.fr.json

rm -f storage/log/laravel.log


